@using System.Threading.Tasks
@using Abp.Application.Services.Dto
@using Net.Qks.Authorization
@using Net.Qks.Web.Areas.Admin.Models.Tenants
@using Net.Qks.Web.Areas.Admin.Startup
@{
    ViewBag.CurrentPageName = AppPermissions.Develop.Tables;
}
@section Scripts
        {
    <script abp-src="/view-resources/Areas/Admin/Views/_Bundles/table-index.js" asp-append-version="true"></script>
}
<div class="kt-subheader kt-grid__item">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span>@L(AppPermissions.Develop.Tables)</span>
        </h3>
        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
        <span class="kt-subheader__desc">
            @L(AppPermissions.Develop.Tables_Info)
        </span>
    </div>
    <div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            @if (IsGranted(AppPermissions.Develop.Tables_Create))
            {
                <button id="CreateNewButton" class="btn btn-primary"><i class="fa fa-plus"></i> @L(AppPermissions.Develop.Tables_Create)</button>
            }
        </div>
    </div>
</div>

<div class="kt-content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="tableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" value="">
                                <span class="input-group-btn">
                                    <button id="GetUsersButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1" aria-label="@L("Search")"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="align-items-center">
                <table id="UsersTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("Actions")</th>
                            <th>实体名称</th>
                            <th>命名空间</th>
                            <th>服务名</th>
                            <th>DtoName</th>
                            <th>AuthorizeName</th>
                            <th>GetAllInputName</th>
                            <th>CreateInputName</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </thead>
                </table>
            </div>

        </div>
    </div>
</div>

